@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = null;
}
<style type="text/css">
    #main {
        width: 100%;
        height: 100%;
        text-align: center;
        background: url(../images/BG.png)no-repeat center center;
        background-size: cover;
        background-attachment: fixed;
        padding: 0;
        margin: 0px;
        border: 0;
    }

    #date {
        font-size: 5em;
        font-weight:normal;
        color: #ffffff;
        padding: 0px;
        margin: 0px;
        border: 0px;
        display: none;
    }

    a:link {
        text-decoration: none;
    }

    a:visited {
        text-decoration: none;
    }

    a:hover {
        text-decoration: none;
    }

    a:active {
        text-decoration: none;
    }
</style>

<html>
<body id="main">
    
    <a asp-area="" asp-controller="Map" asp-action="Map"><h2 id='date'></h2></a>
    
</body>

</html>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function getdates() {
        document.getElementById("date").style.setProperty('line-height', $(window).height() - 30 + 'px');
        var myDate = new Date();
        var h = myDate.getHours();
        var name = "xx";
        if (5 < h && h <= 8) {
            name = "早晨好！"

        }
        else if (8 < h && h <= 11) {
            name = "上午好！";
        }
        else if (11 < h && h <= 13) {
            name = "中午好！"
        }
        else if (13 < h && h <= 16) {
            name = "下午好！"
        }
        else if (16 < h && h <= 19) {
            name = "傍晚好！"
        }
        else if ((19 < h && h <= 24) || (0 <= h && h <= 5)) {
            name = "晚上好！"
        }
        else {
            name = "时间好像不对！"
        }
        document.getElementById("date").innerHTML = name;
        $("#date").fadeIn(1500);

    });
</script>
